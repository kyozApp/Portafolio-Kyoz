---
import { Image } from "astro:assets";
import portafolio from "../assets/Portafolio.png";
import Skill from "./Skill.astro";
---

<section class="section">
    <article class="article">
        <h2>游댕 PORTAFOLIO</h2>
        <a
            class="figure"
            href="https://portafolio-kyoz.pages.dev/"
            target="_blank"
        >
            <Image
                src={portafolio}
                alt="Foto de perfil"
                class="image"
                loading="eager"
            />
        </a>
        <section class="section_info">
            <p class="paragraph">
                Proyecto creado con Astro, que esta hecho de componentes con
                typescript.
            </p>
            <h3>@ Habilidades Utilizadas</h3>
        </section>
        <section class="skills">
            <Skill svg="astro" nombre="astro" />
            <Skill svg="html" nombre="html" />
            <Skill svg="css" nombre="css" />
            <Skill svg="javascript" nombre="javascript" />
            <Skill svg="typescript" nombre="typescript" />
            <Skill svg="cloudfare" nombre="cloudfare" />
            <Skill svg="github" nombre="github" />
        </section>
    </article>
</section>

<style>
    :root {
        --fondo: light-dark(#cbd5e1, #1e293b);
    }

    .section {
        top: 80px;
        width: 100%;
        height: auto;
        padding: 20px 80px;
        background-color: var(--fondo);
    }

    .article {
        width: 100%;
        height: 100%;
    }

    .figure {
        margin: 0;
    }

    .image {
        width: 100%;
        height: auto;
    }

    .section_info {
    }

    .paragraph {
    }

    .skills {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        gap: 20px;
    }

    .lista {
    }

    /* Tama침o para sm */
    @media (640px < width) {
        .article {
            padding: 0 90px;
        }
    }

    /* Tama침o para md */
    @media (768px < width) {
        .article {
            padding: 0 150px;
        }
    }

    /* Tama침o para lg */
    @media (1024px < width) {
        .article {
            padding: 0 200px;
        }
    }

    /* Tama침o para xl */
    @media (1280px < width) {
    }

    /* Tama침o para 2xl */
    @media (1536px < width) {
    }
</style>
